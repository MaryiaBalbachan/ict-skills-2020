{{>trainermenu}}

<section class="ui grey inverted segment">
{{>analytics}}
  {{#each assessment}}
  <table class="ui center aligned celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight</th>
      <th>Chest</th>
      <th>Thigh</th>
      <th>Upper arm</th>
      <th>Waist</th>
      <th>Hips</th>
      <th>Trend</th>
      <th>Comment</th>      
    </tr>
  </thead>
  <tbody>    
    <tr>
      <td>
        {{date}}
      </td>
      <td>
        {{weight}}
      </td>
      <td>
        {{chest}}
      </td>
      <td>
        {{thigh}}
      </td>
      <td>
        {{upperarm}}
      </td>
      <td>
        {{waist}}
      </td>
      <td>
        {{hips}}
      </td>
      <td>
         {{#if trend}} 
        <i class="ui green tag label"></i>              
        {{else}}
        <i class="ui red tag label"></i>
        {{/if}} 
      </td>
      <td>
        {{comment}}
      </td>      
    </tr>   
    </tbody>    
</table>  
  
  <form class="ui secondary equal width form" action="/trainerdashboard/{{memberid}}/addcomment/{{id}}" method="POST">
    <div class="field">
      <label>Trainer Comments</label>
      <input type="text" name="comment" placeholder="Comments">
    </div>
    <button class="ui button" type="submit">
      Submit
    </button>
  </form>
  {{/each}}
</section>
